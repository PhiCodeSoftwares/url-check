{
    "name": "URL Check",
    "version": "1.0",
    "description": "Check dangerous sites",
    "action": {
        "default_popup": "index.html"
    },
    "manifest_version": 3,
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["src/scripts/script.js"]
      }
    ],
    "icons": {
      "16": "src/images/icon16.png",
      "32": "src/images/icon32.png",
      "48": "src/images/icon48.png",
      "128": "src/images/icon128.png"
    }
}