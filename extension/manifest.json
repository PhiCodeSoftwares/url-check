{
    "name": "URL Check",
    "version": "1.0",
    "description": "Check dangerous sites",
    "action": {
        "default_popup": "index.html"
    },
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting"
      ],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["scripts/script.js"]
        }
    ]
}